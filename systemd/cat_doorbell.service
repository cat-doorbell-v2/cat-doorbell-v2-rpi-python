[Unit]
Description=Cat Doorbell
After=network.target
StartLimitIntervalSec=150
StartLimitBurst=3

[Service]
ExecStart=/usr/bin/python3 /home/tennis/cat-doorbell-v2-rpi-python/doorbell.py
Environment="DISPLAY=:0"
WorkingDirectory=/home/tennis/cat-doorbell-v2-rpi-python
User=tennis
Group=tennis
StandardOutput=journal
StandardError=journal
Restart=always
RestartSec=30


[Install]
WantedBy=multi-user.target